extends ../layouts/main-layout--checkoutonly

block title
	title CHECKOUT - step 2

block content
	.cart-wrapper.checkout-shipping
		include ../common/checkout-top
		.checkout-nav
			ul.checkout-nav__list
				li.checkout-nav__item.passed
					a.checkout-nav__link(href="#")
						span.num 1
						i.text Контактная информация
				li.checkout-nav__item.passed
					a.checkout-nav__link(href="#")
						span.num 2
						i.text Доставка
				li.checkout-nav__item.active
					a.checkout-nav__link(href="#")
						span.num 3
						i.text оплата
				li.checkout-nav__item
					a.checkout-nav__link(href="#")
						span.num 4
						i.text Потверждение заказа
		.checkout-main__steps
			form
				.checkout-main__steps-inner
					.checkout__step-header
						h2.checkout__step-title
							span 2. оплата
					.checkout__step-content
						.shipping-type
							.shipping-type__inner
								ul.shipping-info__list
									li.shipping-info__item
										.shipping-info__select-wrapper
											input(type="radio", id="webmoney",name="payment", class="js-checkoutSelect")
											label(for="webmoney")
												img(src="img/img-webmoney.jpg")
												b Webmoney
									li.shipping-info__item.delivery-info.
										Прием платежей через платежную систему WebMoney
						.shipping-type
							.shipping-type__inner
								ul.shipping-info__list
									li.shipping-info__item
										.shipping-info__select-wrapper
											input(type="radio", id="cash",name="payment", class="js-checkoutSelect")
											label(for="cash")
												img(src="img/img-cash.jpg")
												b Наличные
						.shipping-type
							.shipping-type__inner
								ul.shipping-info__list
									li.shipping-info__item
										.shipping-info__select-wrapper
											input(type="radio", id="yandex",name="payment", class="js-checkoutSelect")
											label(for="yandex")
												img(src="img/img-yandexm.jpg")
												b Яндекс.Деньги
									li.shipping-info__item.delivery-info.
										Платежная система <a href="">«Яндекс.Деньги»</a>
					.no-reg-checkout-btn
						button(type="submit") Продолжить оформление